<p class="text-right">
  <%= link_to "新增商品", new_admin_product_path, class: "btn btn-primary" %>
</p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product</th>
      <th>Name</th>
      <th>Price</th>
      <th width="100">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, admin_product_path(product) %></td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag product.image.thumb.url, class: "thumbnail" %>
            <% else %>
              <%= image_tag "http://via.placeholder.com/200x200/text=No+Pic", class: "thumbnail" %>
            <% end %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to "修改", edit_admin_product_path(product) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
