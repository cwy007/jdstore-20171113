<!DOCTYPE html>
<html>
  <head>
    <title>JDStore 后台</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= render "common/navbar" %>
      <%= render "common/flashes" %>
      <div class="row">
        <div class="col-md-2">
          <div class="list-group" style="max-width: 300px;">
            <%= link_to "Products", admin_products_path,
                        class: "list-group-item #{active_class(admin_products_path)}" %>
            <%= link_to "Orders", admin_orders_path,
                        class: "list-group-item #{active_class(admin_orders_path)}"%>
            <a href="#" class="list-group-item">Porta ac consectetur ac</a>
            <a href="#" class="list-group-item">Vestibulum at eros</a>
          </div>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render "common/footer" %>
  </body>
</html>
